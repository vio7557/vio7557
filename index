    <script>
        function updateCountdown() {
            const koniecVlady = new Date("October 29, 2027 23:59:59").getTime();
            const teraz = new Date().getTime();
            const zostava = koniecVlady - teraz;

            if (zostava <= 0) {
                document.getElementById("countdown").innerHTML = "游꿀 KONE캛NE KONIEC! 游꿀";
                document.getElementById("hlaska").innerHTML = "Ideme oslavova콘! 游";
                return;
            }

            const dni = Math.floor(zostava / (1000 * 60 * 60 * 24));
            const hodiny = Math.floor((zostava % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minuty = Math.floor((zostava % (1000 * 60 * 60)) / (1000 * 60));

            document.getElementById("countdown").innerHTML = `${dni} dn칤, ${hodiny} hod칤n, ${minuty} min칰t`;

            const hlasky = [
                "Vydr, u to nebude naveky!",
                "캛as be쮂... aj ke캞 pomaly.",
                "Na v코etko raz pr칤de koniec!",
                "Zvl치dli sme hor코ie, zvl치dneme aj toto.",
                "Ob캜ianska trpezlivos콘 level 9000.",
                "Po캜칤tame ka쬯칰 sekundu... doslova.",
                "Hlavne, 쬰 vieme, kedy to skon캜칤!",
                "O chv칤쬿 si povieme: 'To u pre코lo?'",
                "Ver칤코 na z치zraky? Mo쬹o to skon캜칤 sk칪r!",
                "Mo쬹o to vydr쮂셠e bez psychickej ujmy."
            ];

            const hlaskaElement = document.getElementById("hlaska");
            hlaskaElement.classList.add("fade");

            setTimeout(() => {
                hlaskaElement.innerHTML = hlasky[Math.floor(Math.random() * hlasky.length)];
                hlaskaElement.classList.remove("fade");
            }, 500);
        }

        updateCountdown();
        setInterval(updateCountdown, 60000);
    </script>

